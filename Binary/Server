#!/usr/bin/env node

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
'use strict'; /// Strict Syntax //////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
process.env.TUX_ENVIRONMENT = (process.env.TUX_ENVIRONMENT || 'devel'); /// Environment Definition ///////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
const CommonServiceServer = require('../Common/Service/Server'); /// Server Library //////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Module Dependencies //////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

// We need our application module
let $application = require('../Application');

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Dispatch /////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

// Instantiate our server
let $server = new CommonServer();
// Set the application into the server
$server.application($application);
// Dispatch the server
$server.run();
